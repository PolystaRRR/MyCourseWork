@model Himchistka.Models.DataBase.Service

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Добавить новый "Service"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicePrice" class="control-label"></label>
                <input asp-for="ServicePrice" class="form-control" />
                <span asp-validation-for="ServicePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDescription" class="control-label"></label>
                <input asp-for="ServiceDescription" class="form-control" />
                <span asp-validation-for="ServiceDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcessingType" class="control-label"></label>
                <input asp-for="ProcessingType" class="form-control" />
                <span asp-validation-for="ProcessingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceTimeSpent" class="control-label"></label>
                <input asp-for="ServiceTimeSpent" class="form-control" />
                <span asp-validation-for="ServiceTimeSpent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourcesExpention" class="control-label"></label>
                <input asp-for="ResourcesExpention" class="form-control" />
                <span asp-validation-for="ResourcesExpention" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="mb-3 mt-3">
                @if (User.IsInRole("admin"))
                {
                    <button type="submit" class="btn btn-success">Добавить</button>
                }
                <a asp-controller="Services" asp-action="Index" class="btn btn-primary">
                    Назад к списку
                </a>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
