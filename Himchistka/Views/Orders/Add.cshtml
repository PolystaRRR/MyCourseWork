<div class=" = "bg-secondary bg-opacity-10 py-2">
    <div class ="container">
        <h1>Добавить заказ</h1>
    </div>
</div>

<div  
    class ="container py-5">
    <form method="post">
        <div class="mb-3" style="width:500px">
            <label class="form-label"> Дата приема заказа</label>
            <input type="date" class=" form-control" id="acceptanceDate" name="acceptanceDate" />
        </div>

        <div class="mb-3" style="width:500px">
            <label class="form-label"> Дата выдачи заказа</label>
            <input type="date" class=" form-control" id="readyDate" name="readyDate" />

        </div>

        <div class="mb-3" style="width:500px">
            <label class="form-label"> Адресс приемного пункта</label>
            <input type="text" class=" form-control" id="receptionPoint" name="receptionPoint" />
        </div>

    

        <div class="mb-3" style="width:500px">
            <label class="form-label"> Скидка</label>
            <input type="text" class=" form-control" id="discount" name="discount" />
        </div>


        <div class="mb-3" style="width:500px">
            <label class="form-label"> Итоговая стоимость заказа</label>
            <input type="text" class=" form-control" id="finalPrice" name="finalPrice" />
        </div>


        <div class="mb-3" style="width:500px">
            <label class="form-label"> Тип оплаты</label>
            <input type="text" class=" form-control" id="paymentType" name="paymentType" />
        </div>

        <div>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Доставка</label> 
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>