@model Himchistka.Models.DataBase.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Добавить новый "Product"</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeclaredValue" class="control-label"></label>
                <input asp-for="DeclaredValue" class="form-control" />
                <span asp-validation-for="DeclaredValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FabricType" class="control-label"></label>
                <input asp-for="FabricType" class="form-control" />
                <span asp-validation-for="FabricType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirtStains" class="control-label"></label>
                <select name="DirtStains" class="form-select">
                    <option value="true">Имеются</option>
                    <option value="false">Не имеются</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Defects" class="control-label"></label>
                <input asp-for="Defects" class="form-control" />
                <span asp-validation-for="Defects" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Label" class="control-label"></label>
                <input asp-for="Label" class="form-control" />
                <span asp-validation-for="Label" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <select asp-for="OrderId" class ="form-control" asp-items="ViewBag.OrderId"></select>
            </div>
            <div class="mb-3 mt-3">
                @if (User.IsInRole("admin"))
                {
                    <button type="submit" class="btn btn-success">Добавить</button>
                }
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                    Назад к списку
                </a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
