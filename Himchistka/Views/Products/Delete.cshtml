@model Himchistka.Models.DataBase.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удалить "Product"</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Size)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeclaredValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeclaredValue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FabricType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FabricType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DirtStains)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DirtStains)
            {
                <text>Имеются</text>
            }
            else
            {
                <text>Не имеются</text>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Defects)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Defects)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Label)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Label)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
            Назад к списку
        </a>
    </form>
</div>
